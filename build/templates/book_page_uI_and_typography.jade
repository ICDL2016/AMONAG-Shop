                    .video-wrap
                        iframe(src='https://www.youtube.com/embed/eKSB0gXl9dw', frameborder='0', allowfullscreen='')
            .text-right.m-b-10
                .video-normal
                    .video-wrap
                        iframe(src='https://www.youtube.com/embed/eKSB0gXl9dw', frameborder='0', allowfullscreen='')
            .text-center.m-b-10
                .video-big
                    .video-wrap
                        iframe(src='https://www.youtube.com/embed/eKSB0gXl9dw', frameborder='0', allowfullscreen='')
            .text-left.m-b-10
                .video-verybig
                    .video-wrap
                        iframe(src='https://www.youtube.com/embed/eKSB0gXl9dw', frameborder='0', allowfullscreen='')
            .text-left.m-b-10
                .video-biggest
                    .video-wrap
                        iframe(src='https://www.youtube.com/embed/eKSB0gXl9dw', frameborder='0', allowfullscreen='')